<Window x:Class="baUHInia.Playground.View.AdminGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:baUHInia"
        mc:Ignorable="d"
        Title="HeatIsland" Name="Window" Width="800" Height="600">
    
    <Grid x:Name="DockPanel" MinHeight="200" Margin="0" MinWidth="100">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition MaxWidth="140"/>
        </Grid.ColumnDefinitions>
        
        <ScrollViewer Name="GameScroll" DockPanel.Dock="Left" HorizontalScrollBarVisibility="auto" BorderThickness="4" HorizontalAlignment="Left"/>
        
        <Grid Grid.Column="1" HorizontalAlignment="Left" Height="570" Margin="0.4,0,-0.4,0" VerticalAlignment="Top" Width="140">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="TRYB GRY" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" />
            
            <Button Content="Zapisz Grę" Width="75" Grid.Row="1" Height="20" />
            <Button Content="Wczytaj Grę" Width="75" Grid.Row="2" Height="20"/>
            <Button Content="Nowa Gra" Width="75" Grid.Row="3" Height="20"/>
            <Button Content="Od Nowa" Width="75" Grid.Row="4" Height="20"/>
            <Button Content="Ustawienia" Width="75" Grid.Row="5" Height="20"/>
            <Button Content="Wyloguj" Width="75" Grid.Row="6" Height="20"/>
            
            <ComboBox Name="CategorySelector" SelectedIndex="1" Grid.Row="7" SelectionChanged="CategorySelector_SelectionChanged"/>

            <ScrollViewer x:Name="SelectorScroll" Grid.Row="8" VerticalAlignment="Top" MinHeight="30">
                <Grid Name="SelectorGrid" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </ScrollViewer>
            <Button Name="Filler" Content="Button" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="75" Click="Filler_Click"/>



        </Grid>


    </Grid>

</Window>
